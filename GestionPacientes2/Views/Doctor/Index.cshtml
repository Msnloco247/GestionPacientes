@using GestionPacientes2.Core.Application.ViewModels.Doctor;
@model List<DoctorViewModel>
@{
    ViewData["Title"] = "Medicos";
}

<div class="container-fluid">

    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="Doctor" asp-action="Create" class="btn btn-outline-success">Anadir un nuevo Medico</a>
        </div>
    </div>

    <div class="row">

        @if (Model == null || Model.Count == 0)
        {
            <h2>No hay Medicos</h2>
        }
        else
        {
            @foreach (DoctorViewModel item in Model)
            {
                <div class="col-4">
                    <div class="card shadow-sm">
                        <img class="bd-placeholder-img card-img-top img-product-size" src="@item.PhotoUrl" />

                        <div class="card-body">
                            <h4 class="card-title">@item.Name  - @item.LastName</h4>
                            <p class="card-text">Numero telefonico: @item.Phone</p>
                            <p class="card-text">Identificacion: @item.Identification</p>
                            <p class="card-text">Correo Electronico: @item.Email</p>

                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Doctor" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Editar</a>
                                    <a asp-controller="Doctor" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Borrar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

</div>